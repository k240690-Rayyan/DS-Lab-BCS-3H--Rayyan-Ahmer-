#include <iostream>
using namespace std;

class SafePointer {
    private:
    int* ptr;
    
    public:
    SafePointer() {
        ptr = new int(0);
        
    }
    
    void setVal(int v) {
        *ptr = v;
    }
    
    int getVal() {
        return *ptr;
    }
    
    void release() {
        delete ptr;
        ptr = nullptr;
    }
    
};

int main() {
    int NoStds = 5;
    int marks;
    
    SafePointer stds[NoStds];
    
    cout << "Input the marks for students:" << endl;
    for (int i = 0; i < NoStds; i++) {
        cout << "For student " << i + 1 << ":" << endl;
        cin >> marks;
        stds[i].setVal(marks);
    }
    
    cout << "Results:" << endl;
    for (int i = 0; i < NoStds; i++) {
        cout << "For student " << i + 1 << ":" << stds[i].getVal() << endl;
        
    }

for (int i = 0; i < NoStds; i++) {
        stds[i].release();
    }

    return 0;
}
