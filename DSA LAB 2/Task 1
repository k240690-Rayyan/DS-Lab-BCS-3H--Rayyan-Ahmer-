#include <iostream>
using namespace std;

int main() {
    int size;
    int pos;
    
    cout << "Enter the size of the array:" << endl;
    cin >> size;
    
    int *arr = new int[size];
    
    for (int i=0; i<size; i++) {
        arr[i] = 0;
        
    }
    
    for (int i=0; i<size; i++) {
        cout << "Enter the position to update" << endl;
        cin >> pos;
        if (pos >= 0 && pos < size) {
            cout << "For position: "<< pos << ", enter value..." << endl;
            cin >> arr[pos];
        } 
        else {
            cout << "Invalid input" << endl;
        }
    }
    
    cout << "Entered elements:" << endl;
    for (int i=0; i<size; i++) {
        cout << "Array " << i + 1 << ":" << arr[i] << " ";
        
    }
    
    delete[] arr;
    

    return 0;
}
