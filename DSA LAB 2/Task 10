#include <iostream>
#include <string>

using namespace std;

int main() {
    
    int rows = 3;
    int** category = new int*[rows];
    int size[rows];
    string categoryNames[] = {"Fiction", "Science", "History"};
    
    
    for (int i=0; i < rows; i++) {
        cout << "Enter no. of books for category " << categoryNames[i] << ": " << endl;
        cin >> size[i];
        category[i] = new int[size[i]];
        
    }
    for (int i=0; i < rows; i++) {
        cout << "Enter book IDs for category: " << categoryNames[i] << endl;
        for (int j = 0; j < size[i]; j++) {
            cin >> category[i][j];
        }
    }
    int id;
    bool found = false;
    
    cout << "Book IDs stored!\nNow enter the ID to be found" << endl;
    cin >> id;
    
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < size[i]; j++) {
            if (category[i][j] == id) {
                cout << "Yes! The book is available in category: " << categoryNames[i] << endl;
                found = true;
                
                break; 
            }
        }
        
        if (found) {
            break; 
        }
    }
    
    
    if (!found) {
        cout << "Book unavailable!" << endl;
    }
    
    for (int i = 0; i < rows; i++) {
        delete[] category[i];
    }
    delete[] category;
    
    return 0;
}
